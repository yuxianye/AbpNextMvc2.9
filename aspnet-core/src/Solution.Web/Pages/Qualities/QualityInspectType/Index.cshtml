@page
@using Microsoft.AspNetCore.Authorization
@using Solution.Permissions
@using Solution.Web.Pages.Qualities.QualityInspectType
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Solution.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@model IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<SolutionResource> L
@inject IAuthorizationService Authorization
@{
    PageLayout.Content.Title = L["QualityInspectType"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:QualityInspectType"].Value);
    PageLayout.Content.MenuItemName = "QualityInspectType";
}

@section scripts
{
    <abp-script src="/Pages/Qualities/QualityInspectType/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Qualities/QualityInspectType/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["QualityInspectType"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
			    @if (await Authorization.IsGrantedAsync(SolutionPermissions.QualityInspectTypes.Create))
                { 
                <abp-button id="NewQualityInspectTypeButton"
                            text="@L["CreateQualityInspectType"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="QualityInspectTypeTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["QualityInspectTypeCode"]</th>
                <th>@L["QualityInspectTypeName"]</th>
                <th>@L["QualityInspectTypeRemark"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>