@page
@using Microsoft.AspNetCore.Authorization
@using Solution.Permissions
@using Solution.Web.Pages.Enterprises.EnterpriseSite
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Solution.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@model IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<SolutionResource> L
@inject IAuthorizationService Authorization
@{
    PageLayout.Content.Title = L["EnterpriseSite"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:EnterpriseSite"].Value);
    PageLayout.Content.MenuItemName = "EnterpriseSite";
}

@section scripts
{
    <abp-script src="/Pages/Enterprises/EnterpriseSite/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Enterprises/EnterpriseSite/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["EnterpriseSite"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
			    @if (await Authorization.IsGrantedAsync(SolutionPermissions.EnterpriseSites.Create))
                { 
                <abp-button id="NewEnterpriseSiteButton"
                            text="@L["CreateEnterpriseSite"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="EnterpriseSiteTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["EnterpriseSiteEnterpriseId"]</th>
                <th>@L["EnterpriseSiteName"]</th>
                <th>@L["EnterpriseSiteAddress"]</th>
                <th>@L["EnterpriseSiteManager"]</th>
                <th>@L["EnterpriseSitePhone"]</th>
                <th>@L["EnterpriseSiteRemark"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>