@page
@using Microsoft.AspNetCore.Authorization
@using Solution.Permissions
@using Solution.Web.Pages.Equipments.EquipmentType
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Solution.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@model IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<SolutionResource> L
@inject IAuthorizationService Authorization
@{
    PageLayout.Content.Title = L["EquipmentType"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:EquipmentType"].Value);
    PageLayout.Content.MenuItemName = "EquipmentType";
}

@section scripts
{
    <abp-script src="/Pages/Equipments/EquipmentType/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Equipments/EquipmentType/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["EquipmentType"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
			    @if (await Authorization.IsGrantedAsync(SolutionPermissions.EquipmentTypes.Create))
                { 
                <abp-button id="NewEquipmentTypeButton"
                            text="@L["CreateEquipmentType"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="EquipmentTypeTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["EquipmentTypeName"]</th>
                <th>@L["EquipmentTypeRemark"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>