@page
@using Microsoft.AspNetCore.Authorization
@using Solution.Permissions
@using Solution.Web.Pages.Equipments.EquipmentInspectionResult
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Solution.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@model IndexModel
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<SolutionResource> L
@inject IAuthorizationService Authorization
@{
    PageLayout.Content.Title = L["EquipmentInspectionResult"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:EquipmentInspectionResult"].Value);
    PageLayout.Content.MenuItemName = "EquipmentInspectionResult";
}

@section scripts
{
    <abp-script src="/Pages/Equipments/EquipmentInspectionResult/index.js" />
}
@section styles
{
    <abp-style src="/Pages/Equipments/EquipmentInspectionResult/index.css"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["EquipmentInspectionResult"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
			    @if (await Authorization.IsGrantedAsync(SolutionPermissions.EquipmentInspectionResults.Create))
                { 
                <abp-button id="NewEquipmentInspectionResultButton"
                            text="@L["CreateEquipmentInspectionResult"].Value"
                            icon="plus"
                            button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="EquipmentInspectionResultTable" class="nowrap">
            <thead>
            <tr>
                <th>@L["Actions"]</th>
                <th>@L["EquipmentInspectionResultName"]</th>
                <th>@L["EquipmentInspectionResultRemark"]</th>
            </tr>
            </thead>
        </abp-table>
    </abp-card-body>
</abp-card>